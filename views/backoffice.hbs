<div class="container-md border border-secondary rounded p-3 my-5">
  <div class="text-center"><h2>Backoffice</h2></div>
  <div class="text-center mb-3">Add, Edit or Delete meals</div>
  <div class="col">
    <div class="row border-bottom m-2 p-2 text-right">
      <button type="submit" class="btn btn-primary" onclick="window.location.assign('/add_meal')">Add New Meal</button>
    </div>
    {{#each data}}
    <div class="row">
      <div class="col">
        <div class="row">
          <div style="width: 110px;"><strong>Code</strong></div>
          <div class="col">{{code}}</div>
        </div>
        <div class="row">
          <div style="width: 110px;"><strong>Name</strong></div>
          <div class="col">{{name}}</div>
        </div>
        <div class="row">
          <div style="width: 110px;"><strong>Description</strong></div>
          <div class="col">{{description}}</div>
        </div>
        <div class="row">
          <div style="width: 110px;"><strong>Price</strong></div>
          <div class="col">{{currency price}}</div>
        </div>
        <div class="row">
          <div style="width: 110px;"><strong>Category</strong></div>
          <div class="col">{{category}}</div>
        </div>
        <div class="row">
          <div style="width: 110px;"><strong>Num. of Meals</strong></div>
          <div class="col">{{num_meals}}</div>
        </div>
        <div class="row">
          <div style="width: 110px;"><strong>Is top</strong></div>
          <div class="col">{{is_top}}</div>
        </div>
        <div class="row">
          <div style="width: 110px;"><strong>Image URL</strong></div>
          <div class="col">{{image_url}}</div>
        </div>
      </div>
      <div class="bo-img-wrapper"><img src="/public/meals/{{image_url}}" alt="{{name}}" class="meal-img mx-auto"></div>
    </div>
    <div class="border-bottom m-2 p-2">
      <button type="button" class="btn btn-primary" onclick="window.location.assign('/edit_meal?code={{code}}')">Edit</button>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#delete_{{code}}">Delete</button>
    </div>    
    <!-- Begin Modal -->
    <div class="modal fade" id="delete_{{code}}" tabindex="-1" aria-labelledby="delete_{{code}}_label" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="delete_{{code}}_label">Delete Meal</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete meal "{{name}}" (code {{code}})?
          </div>
          <div class="modal-footer">
            <form action="/delete_meal/{{code}}" method="post">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- End Modal -->
    {{/each}}
  </div>
</div>