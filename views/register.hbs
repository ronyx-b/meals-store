<div class="container-md border border-secondary rounded p-3 my-5">
  <div class="text-center"><h2>Register</h2></div>
  <form name="register" id="form-register" action="/register" method="post" enctype="multipart/form-data">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="fname">First Name: </label>
        <input
          type="text"
          name="fname"
          id="fname"
          class="form-control{{#if data.errors.fname}} border-danger{{/if}}"
          tabindex="1"
          value="{{data.formData.fname}}"
          autocomplete="first-name"
        />
        {{#if data.errors.fname}}
        <div class="mt-3" style="color:red"> 
          <strong>Warning:</strong> {{data.errors.fname}}
        </div>
        {{/if}}
      </div>
      <div class="form-group col-md-6">
        <label for="name">Last Name: </label>
        <input
          type="text"
          name="lname"
          id="lname"
          class="form-control{{#if data.errors.lname}} border-danger{{/if}}"
          tabindex="2"
          value="{{data.formData.lname}}"
          autocomplete="last-name"
        />
        {{#if data.errors.lname}}
        <div class="mt-3" style="color:red"> 
            <strong>Warning:</strong> {{data.errors.lname}}
        </div>
        {{/if}}
      </div>
    </div>
    <div class="form-group">
      <label for="address">Address: </label>
      <input
        type="text"
        name="address"
        id="address"
        class="form-control{{#if data.errors.address}} border-danger{{/if}}"
        tabindex="3"
        placeholder="Street name, number, Apt/Suite,..."
        value="{{data.formData.address}}"
        autocomplete="address-line1"
      />
      {{#if data.errors.address}}
      <div class="mt-3" style="color:red"> 
          <strong>Warning:</strong> {{data.errors.address}}
      </div>
      {{/if}}
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="city">City: </label>
        <input
          type="text"
          name="city"
          id="city"
          class="form-control{{#if data.errors.city}} border-danger{{/if}}"
          tabindex="4"
          value="{{data.formData.city}}"
          list="cities"
        />
        <datalist id="cities">
          <option value="Toronto"></option>
          <option value="Ottawa"></option>
          <option value="Montreal"></option>
          <option value="Quebec"></option>
          <option value="Vancouver"></option>
          <option value="Calgary"></option>
          <option value="Edmonton"></option>
          <option value="Mississauga"></option>
          <option value="Winnipeg"></option>
          <option value="Brampton"></option>
          <option value="Halifax"></option>
          <option value="Saskatoon"></option>
          <option value="Kitchener"></option>
        </datalist>
        {{#if data.errors.city}}
        <div class="mt-3" style="color:red"> 
            <strong>Warning:</strong> {{data.errors.city}}
        </div>
        {{/if}}
      </div>
      <div class="form-group col-md-6">
        <label for="postal">Postal Code: </label>
        <input
          type="text"
          name="postal"
          id="postal"
          class="form-control{{#if data.errors.postal}} border-danger{{/if}}"
          tabindex="5"
          value="{{data.formData.postal}}"
          placeholder="A1A 2B2"
          autocomplete="postal-code"
        />
        {{#if data.errors.postal}}
        <div class="mt-3" style="color:red"> 
            <strong>Warning:</strong> {{data.errors.postal}}
        </div>
        {{/if}}
      </div>
    </div>
    <div class="text-center font-weight-bold">Account Details (credentials)</div>
    <div class="form-group">
      <label for="email">Email Address: </label>
      <input
        type="email"
        name="email"
        id="email"
        class="form-control{{#if data.errors.email}} border-danger{{/if}}"
        tabindex="6"
        placeholder="user@domain.com"
        value="{{data.formData.email}}"
        autocomplete="email"
      />
      {{#if data.errors.email}}
      <div class="mt-3" style="color:red"> 
          <strong>Warning:</strong> {{data.errors.email}}
      </div>
      {{/if}}
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="name">Password: </label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control{{#if data.errors.password}} border-danger{{/if}}"
          tabindex="7"
          value="{{data.formData.password}}"
        />
        {{#if data.errors.password}}
        <div class="mt-3" style="color:red"> 
            <strong>Warning:</strong> {{data.errors.password}}
        </div>
        {{/if}}
      </div>
      <div class="form-group col-md-6">
        <label for="name">Confirm Password: </label>
        <input
          type="password"
          name="passwordConfirm"
          id="passwordConfirm"
          class="form-control{{#if data.errors.passwordConfirm}} border-danger{{/if}}"
          tabindex="8"
          value="{{data.formData.passwordConfirm}}"
        />
        {{#if data.errors.passwordConfirm}}
        <div class="mt-3" style="color:red"> 
            <strong>Warning:</strong> {{data.errors.passwordConfirm}}
        </div>
        {{/if}}
      </div>
    </div>
    <div style="width:fit-content" class="mx-auto">
      <input type="submit" class="btn btn-primary" style="width: 200px;" value="Submit" tabindex="10">
    </div>
    {{#if data.noRegis}}
    <div class="mt-3" style="color:red"> 
      <strong>Warning:</strong> {{data.noRegis}}
    </div>
    {{/if}}
  </form>
</div>