<div class="max-width-small border border-secondary rounded p-3 my-5">
  <div class="text-center"><h2>Login</h2></div>
  <form name="login" id="form-login" action="/login" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="email">Email: </label>
      <input 
        type="email" 
        name="email" 
        id="email" 
        class="form-control"
        value="{{data.formData.email}}"
        placeholder="user@domain.com"
        autocomplete="email"
      />
      {{#if data.errors.email}}
      <div class="mt-3" style="color:red"> 
          <strong>Warning:</strong> {{data.errors.email}}
      </div>
      {{/if}}
    </div>
    <div class="form-group">
      <label for="password">Password: </label>
      <input 
        type="password" 
        name="password" 
        id="password" 
        class="form-control"
        value="{{data.formData.password}}"
        placeholder="**********"
      />
      {{#if data.errors.password}}
      <div class="mt-3" style="color:red"> 
        <strong>Warning:</strong> {{data.errors.password}}
      </div>
      {{/if}}
    </div>
      <div style="width:fit-content" class="mx-auto">
        <input type="submit" class="btn btn-primary" value="Login">
      </div>
    {{#if data.noLogin}}
    <div class="mt-3" style="color:red"> 
      <strong>Warning:</strong> {{data.noLogin}}
    </div>
    <div style="text-align: center;">
      <a href="/register">Register</a>
    </div>
    {{/if}}
  </form>
</div>